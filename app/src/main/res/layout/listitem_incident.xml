<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:id="@+id/wrapperItemAccident"
    android:layout_height="wrap_content">
    
    <ImageView
        android:layout_width="140dp"
        android:id="@+id/photoIncident"
        android:src="@drawable/placeholder_image_notif"
        android:layout_height="140dp"/>
    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:id="@+id/distanceIncident"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:text="@string/distance_incident_list_item"
        android:layout_toRightOf="@+id/photoIncident"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Salut toi"
        android:textSize="16sp"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/photoIncident"
        android:layout_below="@+id/distanceIncident"
        android:layout_height="wrap_content"
        android:id="@+id/shortTitle"/>

</RelativeLayout>